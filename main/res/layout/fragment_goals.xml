<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoalsFragment">

    <TextView
        android:id="@+id/textViewGoalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon objectif quotidien"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextDailyGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="8h"
        android:inputType="numberDecimal"
        android:maxLength="4"
        android:textSize="48sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewGoalTitle" />

    <!-- Placeholder for Circular Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBarCircular"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:max="100"
        android:progress="75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextDailyGoal" />

    <TextView
        android:id="@+id/textViewProgressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="75%"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/progressBarCircular"
        app:layout_constraintEnd_toEndOf="@id/progressBarCircular"
        app:layout_constraintStart_toStartOf="@id/progressBarCircular"
        app:layout_constraintTop_toTopOf="@id/progressBarCircular" />

    <TextView
        android:id="@+id/textViewHistoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historique des badges"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBarCircular" />

    <!-- Placeholder for Achievement Badges -->
    <LinearLayout
        android:id="@+id/linearLayoutBadges"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewHistoryTitle">

        <!-- Example Badge -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:icon="@drawable/ic_badge_gold"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_badge_silver"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_badge_bronze"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>